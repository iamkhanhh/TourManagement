<style>
    .container.service {
        background-color: #ffffff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
    }

    h2 {
        font-weight: 600;
        color: #343a40;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        font-weight: 600;
        padding: 10px 20px;
    }

    .table thead {
        background-color: #e9ecef;
    }

    .table td,
    .table th {
        vertical-align: middle;
        text-align: center;
    }

    .btn-sm {
        padding: 6px 12px;
        font-size: 0.875rem;
        font-weight: 600;
    }

    .btn-primary.btn-sm {
        background-color: #17a2b8;
        border-color: #17a2b8;
    }

    .btn-danger.btn-sm {
        background-color: #dc3545;
        border-color: #dc3545;
    }

    .table-responsive {
        margin-top: 20px;
    }
</style>
<div class="container service mt-5 mb-5">
    <h2 class="mb-4">LOCATIONS MANAGEMENT</h2>

    <div class="table-responsive">
        <table class="table table-bordered">
            <thead class="table-light">
                <tr>
                    <th>#</th>
                    <th>Location ID</th>
                    <th>Location Name</th>
                    <th>Description</th>
                    <th>address</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {{#if data}}
                {{#each data}}
                <tr>
                    <th scope="row">{{sum @index 1}}</th>
                    <td>{{this.location_id}}</td>
                    <td>{{this.location_name}}</td>
                    <td>{{this.description}}</td>
                    <td>{{this.address}}</td>
                    <td>
                        <a href="/tour/edit/{{this.tour_id}}" class="btn btn-sm btn-primary">Edit</a>
                    </td>
                </tr>
                {{/each}}
                {{else}}
                <tr>
                    <td colspan="6">There aren't any locations </td>
                </tr>
                {{/if}}
            </tbody>
        </table>
    </div>
</div>