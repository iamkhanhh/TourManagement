<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<style>
    .tg-account {
        margin-top: 50px;
    }

    .account-banner {
        background: url('https://example.com/tour-banner.jpg') no-repeat center center/cover;
        color: white;
        padding: 60px 0;
        border-radius: 10px;
    }

    .account-banner .inner {
        background-color: rgba(0, 0, 0, 0.6);
        padding: 20px;
        border-radius: 10px;
    }

    .page-title {
        font-size: 36px;
        font-weight: bold;
    }

    .user-name {
        font-size: 24px;
        font-weight: 600;
    }

    .description {
        font-size: 18px;
        margin-top: 10px;
    }

    .profile .image img {
        border-radius: 50%;
        width: 120px;
        height: 120px;
        object-fit: cover;
    }

    .nav-area {
        margin-top: 20px;
    }

    .nav-tabs {
        border-bottom: 2px solid white;
    }

    .nav-link {
        color: white;
        font-size: 18px;
        font-weight: 600;
        margin-right: 10px;
    }

    .nav-link.active {
        color: #fff;
        background-color: #007bff;
        border-radius: 8px;
    }

    .tg-tabs-content-wrapp {
        margin-top: 30px;
    }

    .card {
        border: none;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
        transition: transform 0.2s;
    }

    .card:hover {
        transform: scale(1.05);
    }

    .card-body {
        padding: 20px;
    }

    .card-body img {
        width: 50px;
        height: 50px;
        margin-bottom: 15px;
    }

    .card h2 {
        font-size: 22px;
        font-weight: bold;
    }

    .card p {
        font-size: 16px;
        color: #6c757d;
    }

    .form-group label {
        font-weight: 600;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        padding: 10px 20px;
        border-radius: 8px;
        transition: background-color 0.3s;
    }

    .btn-primary:hover {
        background-color: white;
    }

    .table {
        margin-top: 20px;
    }

    .table th,
    .table td {
        text-align: center;
        vertical-align: middle;
    }

    .view-order {
        color: #007bff;
        font-weight: bold;
    }

    .view-order:hover {
        text-decoration: underline;
    }
</style>
<section class="tg-account mb-5">
    <div class="container">
        <div class="account-banner">
            <div class="inner">
                <div class="row">
                    <div class="col-md-8">
                        <h1 class="page-title">My Account</h1>
                        <h3 class="user-name">Hello Yash!</h3>
                        <p class="description">Manage your bookings and account settings here.</p>
                    </div>
                    <div class="col-md-4 text-center">
                        <div class="profile">
                            <img src="https://res.cloudinary.com/templategalaxy/image/upload/v1631257421/codepen-my-account/images/profile_pdpo9w.png"
                                alt="Yash">
                        </div>
                    </div>
                </div>
                <div class="nav-area">
                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="account-detail" data-bs-toggle="tab" href="#account-details"
                                role="tab" aria-controls="account-details" aria-selected="false"><i
                                    class="fas fa-user-alt"></i> <span>Account Details</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="my-order" data-bs-toggle="tab" href="#my-orders" role="tab"
                                aria-controls="my-orders" aria-selected="false"><i class="fas fa-file-invoice"></i>
                                <span>My booking</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="my-payment" data-bs-toggle="tab" href="#payment" role="tab"
                                aria-controls="payment" aria-selected="false"><i class="fas fa-map-marker-alt"></i>
                                <span>My Payment</span></a>
                        </li>
                        {{#if isProvider}}
                        <li class="nav-item">
                            <a class="nav-link" id="dashboard-link" data-bs-toggle="tab" href="#dashboard" role="tab"
                                aria-controls="dashboard" aria-selected="true"><i class="fas fa-tachometer-alt"></i>
                                <span>Dashboard</span></a>
                        </li>
                        {{/if}}
                        {{#if isAdmin}}
                        <li class="nav-item">
                            <a class="nav-link" id="dashboard-link" data-bs-toggle="tab" href="#dashboard" role="tab"
                                aria-controls="dashboard" aria-selected="true"><i class="fas fa-tachometer-alt"></i>
                                <span>Dashboard</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" target="_blank" href="/admin?mode=all"><i class="fa fa-cog"
                                    aria-hidden="true"></i> <span>Admin</span></a>
                        </li>
                        {{/if}}
                    </ul>
                </div>
            </div>
        </div>

        <div class="tg-tabs-content-wrapp">
            <div class="tab-content" id="myTabContent">
                <!-- Dashboard Tab -->
                <div class="tab-pane fade" id="dashboard" role="tabpanel" aria-labelledby="dashboard-link">
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <a href="/provider/manageTour" class="text-decoration-none">
                                <div class="card">
                                    <div class="card-body text-center">
                                        <img src="https://res.cloudinary.com/templategalaxy/image/upload/v1631257421/codepen-my-account/images/orders_n2aopq.png"
                                            alt="My Tour">
                                        <h2>My Tour</h2>
                                        <p>Manage your past and current bookings.</p>
                                    </div>
                                </div>
                            </a>
                        </div>
                        <div class="col-md-4 mb-3">
                            <a href="/provider/servicesManagement" class="text-decoration-none">

                                <div class="card">
                                    <div class="card-body text-center">

                                        <img src="https://res.cloudinary.com/templategalaxy/image/upload/v1631257421/codepen-my-account/images/notebook_psrhv5.png"
                                            alt="My Service">
                                        <h2>My Service</h2>
                                        <p>Update your address information.</p>
                                    </div>
                                </div>
                            </a>
                        </div>
                        <div class="col-md-4 mb-3">
                            <a href="/provider/locationsManagement" class="text-decoration-none">
                                <div class="card">
                                    <div class="card-body text-center">

                                        <img src="https://res.cloudinary.com/templategalaxy/image/upload/v1631257421/codepen-my-account/images/login_aq9v9z.png"
                                            alt="Account Details">
                                        <h2>My Location</h2>
                                        <p>Manage your location.</p>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
                <!-- Orders Tab -->
                <div class="tab-pane fade" id="my-orders" role="tabpanel" aria-labelledby="my-order">
                    <table id="my-orders-table" class="table table-striped table-bordered dt-responsive nowrap"
                        style="width:100%">
                        <thead>
                            <tr>
                                <th>Order</th>
                                <th>Date</th>
                                <th>Status</th>
                                <th>Total</th>
                                <th class="action">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>#8083</td>
                                <td>Sep 9, 2021</td>
                                <td>Completed</td>
                                <td>$350</td>
                                <td class="action"><a href="#" class="view-order">View Order</a></td>
                            </tr>
                            <tr>
                                <td>#8283</td>
                                <td>Sep 8, 2021</td>
                                <td>Pending</td>
                                <td>$190</td>
                                <td class="action"><a href="#" class="view-order">View Order</a></td>
                            </tr>
                            <tr>
                                <td>#8483</td>
                                <td>Sep 7, 2021</td>
                                <td>Completed</td>
                                <td>$399</td>
                                <td class="action"><a href="#" class="view-order">View Order</a></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <!-- payment Tab -->
                <div class="tab-pane fade" id="payment" role="tabpanel" aria-labelledby="my-payment">
                    <table id="my-orders-table" class="table table-striped table-bordered dt-responsive nowrap"
                        style="width:100%">
                        <thead>
                            <tr>
                                <th>Order</th>
                                <th>Date</th>
                                <th>Status</th>
                                <th>Total</th>
                                <th class="action">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>#8083</td>
                                <td>Sep 9, 2021</td>
                                <td>Completed</td>
                                <td>$350</td>
                                <td class="action"><a href="#" class="view-order">View Order</a></td>
                            </tr>
                            <tr>
                                <td>#8283</td>
                                <td>Sep 8, 2021</td>
                                <td>Pending</td>
                                <td>$190</td>
                                <td class="action"><a href="#" class="view-order">View Order</a></td>
                            </tr>
                            <tr>
                                <td>#8483</td>
                                <td>Sep 7, 2021</td>
                                <td>Completed</td>
                                <td>$399</td>
                                <td class="action"><a href="#" class="view-order">View Order</a></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <!-- Account Details Tab -->
                <div class="tab-pane fade active show" id="account-details" role="tabpanel"
                    aria-labelledby="account-detail">
                    <form class="tg-form">
                        <div class="row">
                            <div class="form-group col-md-6">
                                <label for="inputfname">My ID</label>
                                <input type="text" class="form-control" id="inputfname" placeholder="My ID" readonly>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="inputlname">Money</label>
                                <input type="text" class="form-control" id="inputlname" placeholder="Money" readonly>
                            </div>
                            <div class="form-group col-md-12">
                                <label for="inputdname">User Name</label>
                                <input type="text" class="form-control" id="inputdname" placeholder="User Name">
                            </div>
                            <div class="form-group col-md-12">
                                <label for="inputEmail4">Email</label>
                                <input type="email" class="form-control" id="inputEmail4" placeholder="Email">
                            </div>
                            <div class="form-group col-md-12">
                                <label for="currentPassword">Current Password</label>
                                <input type="password" class="form-control" id="currentPassword"
                                    placeholder="Current Password">
                            </div>
                            <div class="form-group col-md-12">
                                <label for="newPassword">New Password</label>
                                <input type="password" class="form-control" id="newPassword" placeholder="New Password">
                            </div>
                            <div class="form-group col-md-12">
                                <label for="confirmPassword">Confirm Password</label>
                                <input type="password" class="form-control" id="confirmPassword"
                                    placeholder="Confirm Password">
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary mt-3">Update</button>
                    </form>
                </div>

            </div>
        </div>
    </div>
</section>